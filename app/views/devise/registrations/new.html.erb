<h2 class="text-2xl font-bold mb-4">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
  <div class="mb-4">
    <%= devise_error_messages! %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div>
    <%= f.submit "Sign up", class: 'w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
