<h2 class="text-2xl font-bold mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
  <div class="mb-4">
    <%= devise_error_messages! %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, id: 'remember_me', class: 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' %>
      <%= f.label :remember_me, class: 'ml-2 block text-sm text-gray-900' %>
    </div>

    <div class="text-sm">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-medium text-indigo-600 hover:text-indigo-500' %>
    </div>
  </div>

  <div class="mt-4">
    <%= f.submit "Log in", class: 'w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
